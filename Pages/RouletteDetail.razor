                                                    <path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"/>
                                                </svg>
                                            }
                                            @Loc["Open_Stmt"]
                                        </button>
                                    }
                                </div>

                                <div popover id="bet-modal" calss="bg-white dark:bg-gray-700">
                                    <!-- Modal content -->
                                    <div class="rounded-lg bg-white dark:bg-gray-700">
                                        <!-- Modal header -->
                                        <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
                                            <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                                                @Loc["Bet_Stmt"]
                                            </h3>
                                            <button type="button" class="end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
                                                popovertarget="buy-modal" popovertargetaction="hide">
                                                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                                                </svg>
                                                <span class="sr-only">Close</span>
                                            </button>
                                        </div>
                                        <!-- Modal body -->
                                        <div class="p-4 md:p-5">
                                            <form class="space-y-4">
                                                <div>
                                                    <label for="baseAssetAddress" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white flex flex-row justify-between">
                                                        <span>Address</span>
                                                        <span>
                                                            <a class="font-medium text-blue-600 hover:underline dark:text-blue-500" href="@SelectedNetwork!.GetEtherScanTokenBalanceUrl(Token!.BaseAssetAddress, _metamaskHostProvider.SelectedAccount)" target="_blank">@Loc["Token"]</a>
                                                        </span>
                                                    </label>
                                                    <input id="baseAssetAddress" type="text" 
                                                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" 
                                                        value="@Token.BaseAssetAddress"
                                                        disabled=true />
                                                </div>
                                
                                                @if (Token.AssetKind == "ERC20")
                                                {
                                                <div>
                                                    <label for="baseAssetAmount" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white flex flex-row justify-between">
                                                        <span>ERC20</span>
                                                        @if (_userBaseAssetBalance is not null && _userBaseAssetBalance > 0)
                                                        {
                                                        <span>
                                                            <a class="font-medium text-blue-600 hover:underline dark:text-blue-500" href="@SelectedNetwork!.GetEtherScanTokenBalanceUrl(Token!.BaseAssetAddress, _metamaskHostProvider.SelectedAccount)" target="_blank">@Loc["Balance"]: @_userBaseAssetBalance</a>
                                                        </span>
                                                        }
                                                    </label>
                                                    <input id="baseAssetAmount" type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" required
                                                        @bind-value="@InputedBaseAssetAmount" />
                                                </div>
                                                }
                                                else if (Token.AssetKind == "ERC721")
                                                {
                                                <div>
                                                    <label for="baseAssetId" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Quote Asset</label>
                                                    <input id="baseAssetId" type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" required
                                                        @bind-value="InputedBaseAssetId"
                                                        min="0" max="100000000000" step="1" />
                                                </div>
                                                }
                                                else if (Token.AssetKind == "ERC1155")
                                                {
                                                <div>
                                                    <label for="baseAssetId" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Quote Asset</label>
                                                    <input id="baseAssetId" type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" required
                                                        @bind-value="InputedBaseAssetId"
                                                        min="0" max="100000000000" step="1" />
                                                </div>

                                                <div>
                                                    <label for="baseAssetValue" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Quote Asset</label>
                                                    <input id="baseAssetValue" type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" required
                                                        @bind-value="InputedBaseAssetValue"
                                                        min="1" max="100000000000" step="1" />
                                                </div>
                                                }
                                                <button type="button" class="@BetButtonClass w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
                                                    @onclick="HandleBet">
                                                    @if (InProgress)
                                                    {
                                                        <svg aria-hidden="true" class="inline w-4 h-4 text-gray-200 animate-spin dark:text-gray-600 fill-gray-600 dark:fill-gray-300" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                            <path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor"/>
                                                            <path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"/>
                                                        </svg>
                                                    }
                                                    @Loc["Bet_Stmt"]
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <SingleToast />
            </section>
        </Authorized>
        <NotAuthorized>
            @Loc["Connect Wallet"]
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>

@code {
    [Parameter]
    public string ContractAddress { get; set; } = "";

    [Parameter]
    public long TokenId { get; set; }

    [Parameter]
    public string NetworkName { get; set; } = "";

    public NetworkCore? SelectedNetwork => NetworkConfig.GetNetworkByName(NetworkName);

    private string DefaultImage = "data:image/svg+xml;base64,";

    public string NftUrl => SelectedNetwork is not null ? SelectedNetwork.BuildNftUrl(ContractAddress, TokenId) : "";

    public UserRouletteNFT? Token { get; set; }

    public string? Owner { get; set; }

    public bool UserBetted = true;

    public bool IsUserOwner => _metamaskHostProvider.SelectedAccount.Equals(Owner, StringComparison.CurrentCultureIgnoreCase);

    public string[] BetPlayers = [];

    public decimal[] FtBets = [];

    public long[] NftBets = [];

    public class BetPieFtData
    {
        public required string Address { get; set; }
        public decimal Amount { get; set; }
    }

    private List<BetPieFtData> ftPieData = [];

    public class BetPieNftData
    {
        public required string Address { get; set; }
        public long Amount { get; set; }
    }

    private List<BetPieNftData> nftPieData { get; set; } = [];

    private ApexChartOptions<BetPieFtData>? ftOptions;

    protected override void OnInitialized()
    {
        _metamaskHostProvider.NetworkChanged += MetamaskHostProvider_NetworkChainIdChanged;
        _metamaskHostProvider.SelectedAccountChanged += MetamaskHostProvider_SelectedAccountChanged;

        ftOptions = new ApexChartOptions<BetPieFtData>
        {
            Theme = new Theme
            {
                Mode = Mode.Light,
            }
        };
    }

    private async Task MetamaskHostProvider_SelectedAccountChanged(string account)
    {
        UserBetted = await _web3Service.UserBettedRoulette(TokenId, ContractAddress);
        await InvokeAsync(() => this.StateHasChanged());
    }

    private async Task MetamaskHostProvider_NetworkChainIdChanged(long chainId)
    {
        Logger.LogInformation("chan id callback");
        var targetNetwork = NetworkConfig.GetNetworkByName(NetworkName);
        if (targetNetwork is not null && targetNetwork.ChainId != chainId)
        {
            var p = new Dictionary<string, string>();
            p.Add("chainId", "0x" + Convert.ToString(targetNetwork.ChainId, 16));
            await _metamaskInterop.SendAsync(new Nethereum.JsonRpc.Client.RpcMessages.RpcRequestMessage(null, "wallet_switchEthereumChain", p));
        }

        await initTokens();
        await InvokeAsync(() => this.StateHasChanged());
    }

    public void Dispose()
    {
        _metamaskHostProvider.NetworkChanged -= MetamaskHostProvider_NetworkChainIdChanged;
        _metamaskHostProvider.SelectedAccountChanged -= MetamaskHostProvider_SelectedAccountChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            if (Token is null && _metamaskHostProvider.SelectedNetworkChainId > 0)
            {
                await initTokens();
            }
            await InvokeAsync(() => this.StateHasChanged());
        }
    }

    public string Truncate(string? value, int maxLength, string truncationSuffix = "â€¦")
    {
        return value?.Length > maxLength
            ? value.Substring(0, maxLength) + truncationSuffix
            : "";
    }

    private async Task initTokens()
    {
        string metadataUri = await _web3Service.GetTokenUri(ContractAddress, TokenId);
        Token = UserRouletteNFT.FromStr(_metamaskHostProvider.SelectedNetworkChainId, ContractAddress, TokenId, metadataUri);

        Owner = await _web3Service.Erc721OwnerOf(ContractAddress, TokenId);
        Logger.LogInformation($"first render Owner: {Owner}, {_metamaskHostProvider.SelectedAccount}");

        UserBetted = await _web3Service.UserBettedRoulette(TokenId, ContractAddress);

        var betPlayers = await _web3Service.GetTokenBetPlayers(TokenId, ContractAddress);
        BetPlayers = betPlayers.ToArray();
        var rawBets = await _web3Service.GetTokenBetAmounts(TokenId, ContractAddress);
        Logger.LogInformation("raw bets: {}, players: {}", rawBets, betPlayers);

        if (Token!.AssetKind == "ERC20")
        {
            _baseAssetDecimals = await _web3Service.Erc20Decimals(Token!.BaseAssetAddress);
            var balanceInWei = await _web3Service.Erc20BalanceOf(_metamaskHostProvider.SelectedAccount, Token!.BaseAssetAddress);
            _userBaseAssetBalance = Web3.Convert.FromWei(balanceInWei, _baseAssetDecimals);
            InputedBaseAssetAmount = _userBaseAssetBalance ?? 0;
            Logger.LogInformation("user balance: {}, {}", _userBaseAssetBalance, _baseAssetDecimals);
            FtBets = rawBets.Select(e => Web3.Convert.FromWei(e, _baseAssetDecimals)).ToArray();
            for (var i = 0; i < BetPlayers.Length; i++)
            {
                ftPieData.Add(new BetPieFtData
                {
                    Address = Truncate(BetPlayers[i], 10),
                    Amount = FtBets[i]
                });
            }
        }
        else
        {
            NftBets = rawBets.Select(e => (long)e).ToArray();
            for (var i = 0; i < BetPlayers.Length; i++)
            {
                nftPieData.Add(new BetPieNftData
                {
                    Address = Truncate(BetPlayers[i], 10),
                    Amount = NftBets[i]
                });
            }
        }
    }

    private bool InProgress = false;

    private bool BetButtonDisabled = false;

    private string BetButtonClass => BetButtonDisabled ? "cursor-not-allowed" : "";

    public decimal InputedBaseAssetAmount { get; set; } = 0m;

    private int _baseAssetDecimals = 0;

    private decimal? _userBaseAssetBalance = null;

    public long InputedBaseAssetId { get; set; } = 0; // erc721/erc1155

    public long InputedBaseAssetValue { get; set; } = 1; //erc1155

    private async Task HandleBet()
    {
        if (Token!.AssetKind == "ERC20")
        {
            await Bet20();
        }
        else if (Token!.AssetKind == "ERC721")
        {
            await Bet721();
        }
        else
        {
            await Bet1155();
        }
    
        await Task.Delay(3000);

        await JS.InvokeVoidAsync("hidePopover", "bet-modal"); // hide popover

        await initTokens();
    }

    private async Task Bet20()
    {
        InProgress = true;
        try
        {
            var allowance = await _web3Service.GetAllowance(_metamaskHostProvider.SelectedAccount, Token!.Contract, Token!.BaseAssetAddress);
            var InputedBaseAssetAmountWei = Web3.Convert.ToWei(InputedBaseAssetAmount, _baseAssetDecimals);
            if (allowance < InputedBaseAssetAmountWei)
            {
                await _web3Service.Erc20Approve(Token!.Contract, InputedBaseAssetAmountWei, Token!.BaseAssetAddress);
            }
            await Task.Delay(1000);
            Logger.LogInformation("Bet20, {}, {}, {}",
                Token!.TokenId,
                InputedBaseAssetAmountWei,
                Token!.Contract
            );
            await _web3Service.BetRoulette20(
                Token!.TokenId,
                InputedBaseAssetAmountWei,
                Token!.Contract
            );
            toastService.ShowToast($"Token: {Token.TokenId} {Loc["TxSuccess_Stmt"]}", ToastLevel.Success);
        }
        catch (Nethereum.JsonRpc.Client.RpcResponseException e)
        {
            if (e.Message.Contains("User denied transaction signature"))
            {
                toastService.ShowToast(Loc["TxCancelled_Stmt"], ToastLevel.Error);
            }
        } finally {
            InProgress = false;
        }
    }

    private async Task Bet721()
    {
        InProgress = true;
        try {
            var isApproved = await _web3Service.Erc1155IsApprovedForAll(_metamaskHostProvider.SelectedAccount, Token!.Contract, Token!.BaseAssetAddress);
            if (!isApproved)
            {
                await _web3Service.Erc1155SetApprovalForAll(Token!.Contract, true, Token!.BaseAssetAddress);
                await Task.Delay(1000);
                var newIsApproved = await _web3Service.Erc1155IsApprovedForAll(_metamaskHostProvider.SelectedAccount, Token!.Contract, Token!.BaseAssetAddress);
                if (!newIsApproved)
                {
                    toastService.ShowToast(Loc["InsufficientAllowance_Stmt"], ToastLevel.Error);
                    InProgress = false;
                    return;
                }
            }
        } catch {
            toastService.ShowToast("Not NFT or token not exist", ToastLevel.Error);
            InProgress = false;
            return;
        }

        // bet
        Logger.LogInformation("Bet721, {}, {}, {}", Token!.TokenId, InputedBaseAssetId, Token!.Contract);
        try {
            await _web3Service.BetRoulette721(Token!.TokenId, InputedBaseAssetId, Token!.Contract);
            toastService.ShowToast($"Token {Token!.TokenId} {Loc["ExerciseSuccess_Stmt"]}", ToastLevel.Success);
        } catch (Nethereum.JsonRpc.Client.RpcResponseException e) {
            if (e.Message.Contains("User denied transaction signature"))
            {
                toastService.ShowToast(Loc["TxCancelled_Stmt"], ToastLevel.Error);
            }
            else
            {
                toastService.ShowToast("Unknown metamask error", ToastLevel.Error);
            }
        } catch {
            toastService.ShowToast("Not NFT or token not exist", ToastLevel.Error);
        } finally {
            InProgress = false;
        }
    }

    private async Task Bet1155()
    {
        InProgress = true;
        try {
            var isApproved = await _web3Service.Erc1155IsApprovedForAll(_metamaskHostProvider.SelectedAccount, Token!.Contract, Token!.BaseAssetAddress);
            if (!isApproved)
            {
                await _web3Service.Erc1155SetApprovalForAll(Token!.Contract, true, Token!.BaseAssetAddress);
                await Task.Delay(1000);
                var newIsApproved = await _web3Service.Erc1155IsApprovedForAll(_metamaskHostProvider.SelectedAccount, Token!.Contract, Token!.BaseAssetAddress);
                if (!newIsApproved)
                {
                    toastService.ShowToast(Loc["InsufficientAllowance_Stmt"], ToastLevel.Error);
                    InProgress = false;
                    return;
                }
            }
        } catch {
            toastService.ShowToast("Not NFT or token not exist", ToastLevel.Error);
            InProgress = false;
            return;
        }

        // bet
        try {
            await _web3Service.BetRoulette1155(Token!.TokenId, InputedBaseAssetId, InputedBaseAssetValue, Token!.Contract);
            toastService.ShowToast($"Token {Token!.TokenId} {Loc["ExerciseSuccess_Stmt"]}", ToastLevel.Success);
        } catch (Nethereum.JsonRpc.Client.RpcResponseException e) {
            if (e.Message.Contains("User denied transaction signature"))
            {
                toastService.ShowToast(Loc["TxCancelled_Stmt"], ToastLevel.Error);
            }
            else
            {
                toastService.ShowToast("Unknown metamask error", ToastLevel.Error);
            }
        } catch {
            toastService.ShowToast("Not NFT or token not exist", ToastLevel.Error);
        } finally {
            InProgress = false;
        }
    }

    private async Task HandleOpen()
    {
        InProgress = true;
        try
        {
            var winner = await _web3Service.OpenRoulette(
                Token!.TokenId,
                Token!.Contract
            );
            toastService.ShowToast($"Winner: {winner}", ToastLevel.Success);

            await Task.Delay(1000);

            await initTokens();
        }
        catch (Nethereum.JsonRpc.Client.RpcResponseException e)
        {
            if (e.Message.Contains("User denied transaction signature"))
            {
                toastService.ShowToast(Loc["TxCancelled_Stmt"], ToastLevel.Error);
            }
        }
        finally
        {
            InProgress = false;
        }
    }
}
